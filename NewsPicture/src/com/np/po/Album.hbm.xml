<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE hibernate-mapping
	PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!-- Hibernate映射文件的根元素 -->
<hibernate-mapping package="com.np.po">
	<!-- 每个class元素映射一个持久化类 -->
	<class name="Album" table="album">
		<id name="aid" type="int" column="aid">
			<!-- 指定主键生成器策略 -->
			<generator class="identity"/>
		</id>
		<!-- 映射普通属性 -->
		<property name="title" type="string"/>
		<!-- 映射和User实体的N：1关联 -->
		<many-to-one name="user" column="id"
			class="User" not-null="true"/>
		<!-- 映射和Column实体的N：1关联 -->
		<many-to-one name="column" column="cid"
			class="Column" not-null="true"/>
	</class>
</hibernate-mapping>