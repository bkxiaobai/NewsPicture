<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.np.po">
   
	
	<class name="Album" table="album">
        <id name="id" column="Id">
            <generator class="identity"/>
        </id>
        <property name="title" column="title"/>
        <property name="date" column="date"/>
        <property name="times" column="times"/>
        <!-- lazy 属性 关闭延迟加载 -->
		<many-to-one name="user" column="user_id" not-null="false" lazy="false"/>
		<many-to-one name="channel" column="channel_id" not-null="false" lazy="false"/>
		<!-- 若是取photos 中的值应该把lazy="false" 不然的话会报一个异常现在暂且将lazy=false 加上 -->
		<set name="photos" inverse="true" lazy="false">
			<key column="Id"/>
			<one-to-many class="Photo"/>
		</set>
    </class>


</hibernate-mapping>