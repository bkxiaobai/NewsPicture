<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.np.po">
  
	<class name="Photo" table="photo">
        <id name="id" column="Id">
            <generator class="identity"/>
        </id>
        <property name="title" column="title"/>
        <property name="keyword" column="keyword"/>
        <property name="times" column="times"/>
        <property name="picUrl" column="purl"/>
        <property name="bigPicUrl" column="burl"/>
        <property name="smallPicUrl" column="surl"/>
        <property name="date" column="date"/>
        <property name="cover" column="cover"/>
		<many-to-one name="album" column="album_id" not-null="false" lazy="false"/>
    </class>

</hibernate-mapping>